<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="props" value="${load_yaml('..//convert/urdf.yaml')}"/>
    <xacro:property name="l_width" value="0.05"/>
    <xacro:property name="base_len" value="0.4"/>
    <xacro:property name="base_rad" value="0.05"/> 
    <xacro:property name="link3_len" value="0.2"/>  
    <xacro:property name="link3_rad" value="0.02"/>  
 
    <material name="blue">
        <color rgba="0 0.9 1 1"/>
    </material>

    <material name="white"> 
        <color rgba="1 1 1 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="${base_len}" radius="${base_rad}"/>
            </geometry>
            <origin xyz="0 0 -0.06"/>
            <material name="white"/>
        </visual>
    </link>

    <link name="link_1">
        <visual>
            <geometry>
                <box size="${l_width} ${l_width} ${props['i2']['l_len']}"/>
            </geometry>
            <origin xyz="${props['i2']['l_xyz']}" rpy="${props['i2']['l_rpy']}"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="link_2">
        <visual>
            <geometry>
                <box size="${l_width} ${l_width} ${props['i3']['l_len']}"/>
            </geometry>
            <origin xyz="${props['i3']['l_xyz']}" rpy="${props['i3']['l_rpy']}"/>
            <material name="white"/>
        </visual>
    </link>

    <link name="link_3">
        <visual>
            <geometry>
                <cylinder length="${link3_len}" radius="${link3_rad}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>


    <joint name="base_to_link1" type="revolute">
        <parent link="base_link"/>
        <child link="link_1"/>
        <origin xyz="${props['i1']['j_xyz']}" rpy="${props['i1']['j_rpy']}"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-3.1415" upper="3.1415" velocity="0.5"/>
    </joint>

    <joint name="link1_to_link2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz="${props['i2']['j_xyz']}" rpy="${props['i2']['j_rpy']}"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.57075" upper="1.57075" velocity="0.5"/>
    </joint>

    <joint name="link2_to_link3" type="prismatic">
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz="${props['i3']['j_xyz']}" rpy="${props['i3']['j_rpy']}"/>
        <limit effort="1000.0" lower="-0.1" upper="0.1" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

</robot>
